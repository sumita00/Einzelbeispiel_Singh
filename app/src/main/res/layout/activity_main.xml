<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF8F7"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="77dp"
        android:hint="Gib deine Matrikelnummer ein"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/matrikelNr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="232dp"
        android:ems="10"
        android:hint="Matrikelnummer"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#009688"
        android:onClick="onClick"
        android:text="Abschicken"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="492dp"
        android:text="Antwort vom Server"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textField3"
        android:layout_width="214dp"
        android:layout_height="33dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:background="#F6F1F1"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Berechnung:"
        android:textColorLink="#FBF4F4"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/antwortFromServer" />

    <TextView
        android:id="@+id/antwortFromServer"
        android:layout_width="254dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="536dp"
        android:layout_marginBottom="213dp"
        android:gravity="center|clip_vertical|center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/berechnen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/berechnungresult"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textField3" />

    <Button
        android:id="@+id/berechnen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:onClick="getBerechnung"
        android:text="Berechnen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/antwortFromServer"
        tools:ignore="OnClick" />

</androidx.constraintlayout.widget.ConstraintLayout>